main-margin = 0px /*margin used inside of the #main items*/
main-padding = 30px /*padding used inside of the #main items*/
border-size = 2px solid /*border size used in #main items*/

body    
        font: 24px Helvetica
        background: #999999

    #main
        min-height: 800px
        margin: 0px
        padding: 0px
        display: flex
        flex-flow: row
 
    #main > article 
        margin: main-margin
        padding: main-padding
        border: border-size #cccc33
        background: #dddd88
        flex: 3 1 60%
        order: 2
    

    #main > nav 
        margin: main-margin
        padding: main-padding
        border: border-size #8888bb
        background: #ccccff
        flex: 1 6 20%
        order: 1
    
  
    #main > aside 
        margin: main-margin
        padding: main-padding
        border: border-size #8888bb
        background: #ccccff
        flex: 1 6 20%
        font-style: italic
        order: 3
    
 
    header, footer 
        display: block
        font: 40px Arial
        margin: main-margin
        padding: main-padding
        min-height: 100px
        border: border-size #eebb55
        background: #ffeebb
    
 
    /* Too narrow to support three columns */
    @media all and (max-width: 640px) 
        #main, #page 
            flex-direction: column
        

        #main > article, #main > nav, #main > aside 
        /* Return them to document order */
            order: 0
        

        #main > nav 
        	text-align: right
        

        #main > nav, #main > aside, header, footer 
            min-height: 80px
            max-height: 50px
        
    
